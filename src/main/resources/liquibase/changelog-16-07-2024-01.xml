<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet author="mikhail.aheichyk" id="1700574778694-1" dbms="postgresql">
        <createIndex tableName="meeting" indexName="meeting_end_time_idx">
            <column name="end_time"/>
        </createIndex>

        <createIndex tableName="meeting" indexName="meeting_created_at_idx">
            <column name="created_at"/>
        </createIndex>

        <createIndex tableName="meeting_participant" indexName="meeting_participant_meeting_id_idx">
            <column name="meeting_id"/>
        </createIndex>

        <createIndex tableName="meeting_participant" indexName="meeting_participant_email_upper_idx">
            <column name="upper(email)"/>
        </createIndex>

        <createIndex tableName="notification" indexName="notification_user_id_idx">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
