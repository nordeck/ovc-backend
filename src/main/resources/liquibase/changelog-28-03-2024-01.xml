<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <property name="NOW" value="now()" dbms="mysql,h2"/>
    <property name="NOW" value="CURRENT_TIMESTAMP" dbms="postgresql"/>
    <property name="NOW" value="sysdate" dbms="oracle"/>

    <changeSet author="wagner.wutzke" id="1700574778677-1">
        <createTable tableName="notification">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="notification_pkey"/>
            </column>
            <column name="message" type="VARCHAR(512)"/>
            <column name="user_id" type="VARCHAR(255)"/>
            <column name="meeting_id" type="UUID" />
            <column name="end_time" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE" defaultValueComputed="${NOW}">
                <constraints nullable="false"/>
            </column>
            <column name="viewed_at" type="TIMESTAMP WITHOUT TIME ZONE" />
            <column name="viewed" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>
</databaseChangeLog>